@page
@model Veterinaria.App.Presentacion.Pages.AdminMascotasModel
@{

}

<br />
<div class="container row">
	<div class="col-6">
		<h2 class="text-info">Gestión de Mascotas</h2>
	</div>
	<div class="col-6 text-right">
		<a asp-page="NuevaMascota" class="btn btn-primary">Crear Mascota</a>
	</div>
</div>

@if(Model.mensaje != null){
	<div class="alert alert-info alert-dismissible" role="alert">
		<button type="button" class="close" data-dismiss="alert" aria-label="close">
			<span aria-hidden="true">&times;</span>
		</button>
		@Model.mensaje
	</div>
}

<form method="POST">
	@if (Model.listaMascotas.Count() > 0)
	{
		<br /><br />
		<table class="table table-striped border">
			<tr class="tbale-secondary">
				<th>Nombre</th>
				<th>Especie</th>
				<th>Sexo</th>
				<th>Cuidador</th>
				<th>Acciones</th>
			</tr>
			@foreach (var item in Model.listaMascotas)
			{
				<tr>
					<td>@Html.DisplayFor(m => item.Nombre)</td>
					<td>@Html.DisplayFor(m => item.Especie)</td>
					<td>@Html.DisplayFor(m => item.Sexo)</td>
					<td>@Html.DisplayFor(m => item.IdCuidador)</td>
					<td>
						<button asp-route-id="@item.Id" asp-page-handler="ELiminar"
					onclick="return confirm('Esta seguro de eliminar la mascota?')"
					class="btn btn-danger btn-sm">Borrar</button>
						<a asp-route-id="@item.Id" asp-page="Edit" class="btn btn-success btn-sm">Editar</a>
					</td>
				</tr>
			}
		</table>

	}
	else
	{
		<h3>No hay Mascotas para mostrar</h3>
	}
</form>